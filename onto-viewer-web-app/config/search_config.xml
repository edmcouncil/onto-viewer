<?xml version="1.0" encoding="UTF-8"?>
<properties>
  <searchConfig>
    
    
    <!-- The file describes the fields that are taken into account for hints and searches.
    Only the defined fields in this file are taken into account -->
    
    
    <!-- refers to hints -->
    <hintFields>
      
      <!-- refers to single field -->
      <hintField>
        <!-- Definition of single iri that relates to a specific resource field  -->
        <fieldIri>http://www.w3.org/2004/02/skos/core#definition</fieldIri>       
        <!-- A multiplier that modifies the relevance of a field
        Below 1 decrease weight above  1 increase  -->
        <fieldBoost>1.0</fieldBoost>
      </hintField>  
      <hintField>
        <fieldIri>http://spec.edmcouncil.org/owlnames#mdDefinition</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>          
      <hintField>
        <fieldIri>@viewer.iri.fragment</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField> 
      <hintField>
        <fieldIri>http://www.w3.org/2000/01/rdf-schema#label</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>
      <hintField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#prefLabel</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>
      <hintField>
        <fieldIri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/synonym</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>
    </hintFields>
    
    <!-- Minimum weight that qualifies to appear in hints -->
    <hintThreshold>0.0</hintThreshold>
    
    
    <!-- Maximum difference from levenstein distance, qualifies to appear in hints. 
    The condition for running Levenstein's algorithm is the absence of basic results. -->
    <hintLevensteinDistance>3.0</hintLevensteinDistance>
    
    <!-- refers to advanced search -->
    <searchFields>
      
      <!-- refers to single field -->
      <searchField>
        
        <!-- Definition of single iri that relates to a specific resource field  -->
        <fieldIri>http://www.w3.org/2000/01/rdf-schema#label</fieldIri>
        
        <!-- A multiplier that modifies the relevance of a field
        Below 1 decrease weight above  1 increase  -->
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#prefLabel</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#definition</fieldIri>
        <fieldBoost>0.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>http://purl.org/dc/terms/abstract</fieldIri>
        <fieldBoost>0.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/synonym</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/abbreviation</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>http://www.omg.org/techprocess/ab/SpecificationMetadata/keyword</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>@viewer.iri.fragment</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#definition</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
    
      <searchField>
        <fieldIri>http://spec.edmcouncil.org/owlnames#mdDefinition</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>

      
      
    </searchFields>
    <!-- Minimum weight that qualifies to appear in search -->
    <searchThreshold>0.0</searchThreshold>
    
     <!-- Maximum difference from levenstein distance, qualifies to appear in search. 
    The condition for running Levenstein's algorithm is the absence of basic results. -->
    <searchLevensteinDistance>3.0</searchLevensteinDistance>

    <!-- Defined fields to be displayed as description in advanced search -->
    <searchDescriptions>
      <searchDescription>http://www.w3.org/2004/02/skos/core#definition</searchDescription>
      <searchDescription>http://purl.org/dc/terms/abstract</searchDescription>
    </searchDescriptions>

    <fuzzyDistance>3</fuzzyDistance>
    <reindexOnStart>true</reindexOnStart>

    <findProperties>
      <findProperty>
        <label>RDFS Label</label>
        <identifier>rdfs_label</identifier>
        <iri>http://www.w3.org/2000/01/rdf-schema#label</iri>
      </findProperty>
      <findProperty>
        <label>SKOS Definition</label>
        <identifier>skos_definition</identifier>
        <iri>http://www.w3.org/2004/02/skos/core#definition</iri>
      </findProperty>
      <findProperty>
        <label>FIBO Explanatory Note</label>
        <identifier>fibo_explanatoryNote</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/explanatoryNote</iri>
      </findProperty>
      <findProperty>
        <label>SKOS Note</label>
        <identifier>skos_note</identifier>
        <iri>http://www.w3.org/2004/02/skos/core#note</iri>
      </findProperty>
      <findProperty>
        <label>FIBO Abbreviation</label>
        <identifier>fibo_abbreviation</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/abbreviation</iri>
      </findProperty>
      <findProperty>
        <label>FIBO Common Designation</label>
        <identifier>fibo_commonDesignation</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/commonDesignation</iri>
      </findProperty>
      <findProperty>
        <label>PURL Description</label>
        <identifier>purl_description</identifier>
        <iri>http://purl.org/dc/terms/description</iri>
      </findProperty>
      <findProperty>
        <label>FIBO Synonym</label>
        <identifier>fibo_synonym</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/synonym</iri>
      </findProperty>
      <findProperty>
        <label>FIBO Preferred Designation</label>
        <identifier>fibo_preferredDesignation</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/preferredDesignation</iri>
      </findProperty>
      <findProperty>
        <label>SKOS Example</label>
        <identifier>skos_example</identifier>
        <iri>http://www.w3.org/2004/02/skos/core#example</iri>
      </findProperty>
      <findProperty>
        <label>FIBO Usage Note</label>
        <identifier>fibo_usageNote</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/usageNote</iri>
      </findProperty>
      <findProperty>
        <label>SKOS Scope Note</label>
        <identifier>skos_scopeNote</identifier>
        <iri>http://www.w3.org/2004/02/skos/core#scopeNote</iri>
      </findProperty>
      <findProperty>
        <label>FIBO Symbol</label>
        <identifier>fibo_symbol</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/symbol</iri>
      </findProperty>
      <findProperty>
        <label>SKOS Alt Label</label>
        <identifier>skos_altLabel</identifier>
        <iri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/definitionOrigin</iri>
      </findProperty>
    </findProperties>
  </searchConfig>
</properties>


