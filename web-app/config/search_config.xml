<?xml version="1.0" encoding="UTF-8"?>
<properties>
  <searchConfig>
    
    
    <!-- The file describes the fields that are taken into account for hints and searches.
    Only the defined fields in this file are taken into account -->
    
    
    <!-- refers to hints -->
    <hintFields>
      
      <!-- refers to single field -->
      <hintField>
        <!-- Definition of single iri that relates to a specific resource field  -->
        <fieldIri>http://www.w3.org/2004/02/skos/core#definition</fieldIri>       
        <!-- A multiplier that modifies the relevance of a field
        Below 1 decrease weight above  1 increase  -->
        <fieldBoost>1.0</fieldBoost>
      </hintField>  
      <hintField>
        <fieldIri>http://spec.edmcouncil.org/owlnames#mdDefinition</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>          
      <hintField>
        <fieldIri>@viewer.iri.fragment</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField> 
      <hintField>
        <fieldIri>http://www.w3.org/2000/01/rdf-schema#label</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>
      <hintField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#prefLabel</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>
      <hintField>
        <fieldIri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/synonym</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </hintField>
    </hintFields>
    
    <!-- Minimum weight that qualifies to appear in hints -->
    <hintThreshold>0.0</hintThreshold>
    
    
    <!-- Maximum difference from levenstein distance, qualifies to appear in hints. 
    The condition for running Levenstein's algorithm is the absence of basic results. -->
    <hintLevensteinDistance>3.0</hintLevensteinDistance>
    
    <!-- refers to advanced search -->
    <searchFields>
      
      <!-- refers to single field -->
      <searchField>
        
        <!-- Definition of single iri that relates to a specific resource field  -->
        <fieldIri>http://www.w3.org/2000/01/rdf-schema#label</fieldIri>
        
        <!-- A multiplier that modifies the relevance of a field
        Below 1 decrease weight above  1 increase  -->
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#prefLabel</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#definition</fieldIri>
        <fieldBoost>0.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>http://purl.org/dc/terms/abstract</fieldIri>
        <fieldBoost>0.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/synonym</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>https://spec.edmcouncil.org/fibo/ontology/FND/Utilities/AnnotationVocabulary/abbreviation</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
	  
      <searchField>
        <fieldIri>http://www.omg.org/techprocess/ab/SpecificationMetadata/keyword</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>@viewer.iri.fragment</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
      
      <searchField>
        <fieldIri>http://www.w3.org/2004/02/skos/core#definition</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>
    
      <searchField>
        <fieldIri>http://spec.edmcouncil.org/owlnames#mdDefinition</fieldIri>
        <fieldBoost>1.0</fieldBoost>
      </searchField>

      
      
    </searchFields>
    <!-- Minimum weight that qualifies to appear in search -->
    <searchThreshold>0.0</searchThreshold>
    
     <!-- Maximum difference from levenstein distance, qualifies to appear in search. 
    The condition for running Levenstein's algorithm is the absence of basic results. -->
    <searchLevensteinDistance>3.0</searchLevensteinDistance>
    
    
    <!-- Defined fields to be displayed as description in advanced search -->
    <searchDescriptions>
      <searchDescription>http://www.w3.org/2004/02/skos/core#definition</searchDescription>
      <searchDescription>http://purl.org/dc/terms/abstract</searchDescription>
    </searchDescriptions>
  </searchConfig>

</properties>


